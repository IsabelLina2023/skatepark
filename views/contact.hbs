<div class="col-md-4 mx-auto">

  <h2 class="text-center">Contacto</h2>
  <p class="fw-lighter">Si tienes consultas, no dudes en escribirme</p>

  <form action="/contact" method="POST">
{{#if success}}
  <div class="alert alert-success" role="alert">
    {{success}}
  </div>
{{/if}}

    {{#if errors}}
      <div>
        {{#each errors}}
          <p class="alert alert-danger" role="alert">{{this.msg}}</p>
        {{/each}}
      </div>
    {{/if}}
    <div class="mb-3">
      <label class="form-label" for="name">Nombre:</label>
      <input
        class="form-control"
        type="text"
        name="name"
        id="name"
        placeholder="Ej. John Doe"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="email">Correo electr√≥nico:</label>
      <input
        class="form-control"
        type="text"
        name="email"
        id="email"
        placeholder="Ej. WcWp2@example.com"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="subject">Asunto:</label>
      <input
        class="form-control"
        type="text"
        name="subject"
        id="subject"
        placeholder="Ej. WcWp2@example.com"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="message">Mensaje:</label>
      <textarea
        class="form-control"
        name="message"
        id="message"
        rows="5"
      ></textarea>
    </div>
    <div>
      <input class="btn btn-warning d-block my w-100" type="submit" value="Send" />
    </div>

  </form>
</div>